{
	"collections": {
		"users": {
			"model": "User",
			"schema": {
				"name": "String",
		    "email": "String",
		    "password": "String",
		    "createdAt": { "type": "Date", "default": "Date.now" }
			}
		},
		"articles": {
			"model": "Article",
			"schema": {
				"title" : "String",
				"body" : "String",
				"createdBy" : { "type": "ObjectId", "ref":"User", "required": false},
				"createdAt": { "type": "Date", "default": "Date.now" }
			}
		}
	},
	"routes": {
		"api" : {
			"_meta": {
				"virtual": true,
				"crud": true,
				"contentType": "json"
			},
			"users": {},
			"articles": {}
		}
	}
}
