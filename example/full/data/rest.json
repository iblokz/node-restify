{
	"config": {
		"userRoles": ["admin","publisher","user"]
	},
	"collections": {
		"articles": {
			"model": "Article",
			"schema": {
				"title" : "String",
				"body" : "String",
				"createdBy" : { "type": "ObjectId", "ref":"User", "required": false}
			}
		},
		"users": {
			"model": "User"
		}
	},
	"routes": {
		"api" : {
			"_meta": {
				"virtual": true,
				"crud": true,
				"contentType": "json"
			},
			"articles": {
				"_meta": {
					"access": {
						"admin": "all",
						"publisher": "own",
						"user": "list,view"
					}
				}
			},
			"users": {
				"articles": {
					"_meta": {
						"hookAt": "document",
						"hook": {
							"hostParam": "userId",
							"linkField": "createdBy"
						},
						"access": {
							"admin": "all",
							"publisher": "own",
							"user": "list,view"
						}
					}
				}
			}
		}
	}
}